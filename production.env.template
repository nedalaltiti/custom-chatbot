# Production Environment Template for HR Teams Bot
# Copy this to .env.production and fill in the actual values

# =============================================================================
# MICROSOFT TEAMS CREDENTIALS (Required from Azure Portal)
# =============================================================================
MICROSOFT_APP_ID=<your-teams-app-id-from-azure>
MICROSOFT_APP_PASSWORD=<your-teams-app-password-from-azure>
TENANT_ID=<your-azure-tenant-id>
CLIENT_ID=<your-azure-client-id>
CLIENT_SECRET=<your-azure-client-secret>

# =============================================================================
# AWS CONFIGURATION (For accessing Secrets Manager)
# =============================================================================
USE_AWS_SECRETS=true
AWS_REGION=us-west-1

# AWS Credentials (IAM user with Secrets Manager access)
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>

# AWS Secret Names (Already configured in us-west-1)
AWS_DB_SECRET_NAME=chatbot-clarity-db-dev-postgres
AWS_GEMINI_SECRET_NAME=genai-gemini-vertex-prod-api

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=HR Teams Bot
DEBUG=false
PORT=3978
HOST=0.0.0.0

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
USE_INTENT_CLASSIFICATION=false
CACHE_EMBEDDINGS=true
CACHE_TTL_SECONDS=3600
MIN_STREAMING_LENGTH=50
ENABLE_STREAMING=true
STREAMING_DELAY=1.2

# =============================================================================
# SESSION AND FEEDBACK SETTINGS
# =============================================================================
SESSION_IDLE_MINUTES=30
FEEDBACK_TIMEOUT_MINUTES=10

# =============================================================================
# HR SUPPORT PORTAL
# =============================================================================
HR_SUPPORT_URL=https://hrsupport.usclarity.com/support/home
HR_SUPPORT_DOMAIN=hrsupport.usclarity.com

# =============================================================================
# DATABASE POOL SETTINGS
# =============================================================================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# =============================================================================
# CORS SETTINGS (Adjust for your domain)
# =============================================================================
CORS_ORIGINS=["https://teams.microsoft.com"] 