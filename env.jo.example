# This file should be copied to .env.jo for the Jo instance

# AWS Configuration
USE_AWS_SECRETS=true
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=${JO_AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${JO_AWS_SECRET_ACCESS_KEY}
 
# AWS Secret Names - Jordan specific
AWS_DB_SECRET_NAME=chatbot-clarity-db-jordan-postgres
AWS_GEMINI_SECRET_NAME=genai-gemini-vertex-prod-api
 
# Google Cloud Settings
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_CLOUD_PROJECT=gemini-deployment-jordan
 
# Microsoft Teams Credentials - Jordan tenant
MICROSOFT_APP_ID=${JO_MICROSOFT_APP_ID}
MICROSOFT_APP_PASSWORD=${JO_MICROSOFT_APP_PASSWORD}
TENANT_ID=${JO_TENANT_ID}
CLIENT_ID=${JO_CLIENT_ID}
CLIENT_SECRET=${JO_CLIENT_SECRET}
 
# Jordan-specific settings
FEEDBACK_TIMEOUT_MINUTES=10
HR_SUPPORT_URL=https://hrsupport.jordan.usclarity.com/support/home
HR_SUPPORT_DOMAIN=hrsupport.jordan.usclarity.com
SESSION_IDLE_MINUTES=30
 
# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
 
# AI/ML Configuration
EMBEDDING_MODEL_NAME=text-embedding-005
EMBEDDING_DIMENSIONS=768
GEMINI_MODEL_NAME=gemini-2.0-flash-001
GEMINI_TEMPERATURE=0
GEMINI_MAX_OUTPUT_TOKENS=1024
 
# Feature Flags
USE_INTENT_CLASSIFICATION=false
CACHE_EMBEDDINGS=true
ENABLE_STREAMING=true
 
# Performance Settings
CACHE_TTL_SECONDS=3600
MIN_STREAMING_LENGTH=50
SHOW_ACK_THRESHOLD=10
STREAMING_DELAY=1.2
max_chunk_size=150